{% extends 'base.html.twig' %}

{% block body %}
    <br><br><br>
    <div class="row center">
        <div class="col s12 m4 l2"></div>
        <div class="col s12 m4 l8">
            <div id="desc" class="container">
                <h1>Création d'un nouveau groupe</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <br><br><br>
                <div class=" waves-effect waves-light btn light">
                    <input type="submit" value="Crée" />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="col s12 m4 l2"></div>
    </div>

    <ul>
        <li>
            <a href="{{ path('groupe_index') }}">Back to the list</a>
        </li>
    </ul>
    {% block javascripts %}
        {{ parent() }}
        <script>
            $(document).ready(function () {
                $( "form" ).submit(function( event ) {
                    swal("Good job!", "Vous venez d'ajouter un groupe!", "success");
                });
                $('#appbundle_groupe_participant').select2({
                    width: '100%'
                });
            });
        </script>

    {% endblock %}
{% endblock %}
